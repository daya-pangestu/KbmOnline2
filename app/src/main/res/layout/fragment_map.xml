<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_height="match_parent" xmlns:mapbox="http://schemas.android.com/apk/res-auto"
             tools:context=".view.MapFragment">
    <LinearLayout
            android:id="@+id/lin_search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp"
            android:orientation="vertical">


        <TextView
                android:id="@+id/fMapSearchOrigin"
                android:hint="  origin"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="40dp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:textSize="16sp"
                android:textColorHint="@android:color/white"
                android:background="#24ad9f"/>

        <TextView
                android:id="@+id/fMapSearchDestination"
                android:hint="  destination"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="40dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textColorHint="@android:color/white"
                android:background="#24ad9f"/>


    </LinearLayout>

    <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/fmapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/lin_search_container"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent">
    </com.mapbox.mapboxsdk.maps.MapView>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintStart_toStartOf="parent"
            android:background="@android:color/white"
            android:clipToPadding="true"
            app:behavior_hideable="true"
            app:behavior_peekHeight="300dp"
            app:layout_behavior="@string/bottom_sheet_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_const"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

            <TextView
                    android:id="@+id/txt_jarak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222 KM"
                    android:textColor="#518A6C"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <TextView
                    app:layout_constraintStart_toEndOf="@id/txt_jarak"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    app:layout_constraintHorizontal_bias="0.1"
                    android:text="( 20.000 )"
                    android:textSize="24sp"
                    app:layout_constraintTop_toTopOf="@id/txt_jarak"
                    android:layout_height="wrap_content"/>

            <Button
                    android:id="@+id/fmapBtnStart"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/txt_jarak"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Start"

                    />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>